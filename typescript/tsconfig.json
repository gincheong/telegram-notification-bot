{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "baseUrl": ".",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@tnb/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
